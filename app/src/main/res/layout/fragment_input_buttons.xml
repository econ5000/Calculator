<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="7"
        android:id="@+id/button7"
        android:layout_below="@+id/textViewResults"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="32dp"
        android:onClick="updateDisplay"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="8"
        android:id="@+id/button8"
        android:textSize="32dp"
        android:layout_below="@+id/textViewResults"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:onClick="updateDisplay"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="9"
        android:id="@+id/button9"
        android:textSize="32dp"
        android:layout_below="@+id/textViewResults"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:onClick="updateDisplay"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="4"
        android:id="@+id/button4"
        android:textSize="32dp"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="updateDisplay"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="5"
        android:id="@+id/button5"
        android:textSize="32dp"
        android:layout_below="@+id/button8"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:onClick="updateDisplay"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="6"
        android:id="@+id/button6"
        android:textSize="32dp"
        android:layout_below="@+id/button9"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5"
        android:onClick="updateDisplay"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="1"
        android:id="@+id/button1"
        android:textSize="32dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="updateDisplay"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="3"
        android:id="@+id/button3"
        android:textSize="32dp"
        android:layout_below="@+id/button6"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:onClick="updateDisplay"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:soundEffectsEnabled="true"
        android:background="@android:color/transparent"
        android:text="2"
        android:id="@+id/button2"
        android:textSize="32dp"
        android:layout_below="@+id/button5"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3"
        android:onClick="updateDisplay"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="0"

        android:id="@+id/button0"
        android:textSize="32dp"
        android:layout_below="@+id/button1"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3"
        android:onClick="updateDisplay"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="."
        android:id="@+id/buttonDec"
        android:textSize="32dp"
        android:layout_alignBottom="@+id/button0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="updateDisplay"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="="
        android:id="@+id/buttonEqual"
        android:textSize="32dp"
        android:layout_alignBottom="@+id/button0"
        android:layout_toRightOf="@+id/button0"
        android:layout_toEndOf="@+id/button0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="/"
        android:id="@+id/buttondiv"
        android:textSize="32dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="*"
        android:id="@+id/buttonMult"
        android:textSize="32dp"
        android:layout_below="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="-"
        android:id="@+id/buttonMinus"
        android:textSize="32dp"
        android:layout_below="@+id/buttonMult"
        android:layout_alignLeft="@+id/buttonMult"
        android:layout_alignStart="@+id/buttonMult" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="+"
        android:id="@+id/buttonPlus"
        android:textSize="32dp"
        android:layout_alignBottom="@+id/buttonEqual"
        android:layout_alignRight="@+id/buttonMinus"
        android:layout_alignEnd="@+id/buttonMinus" />


</RelativeLayout>